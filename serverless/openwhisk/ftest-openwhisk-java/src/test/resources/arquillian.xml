  xsi:schemaLocation="http://jboss.org/schema/arquillian
    http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <!-- We have to bind the docker hostname and port, otherwise RMI will choose a random port, which we can't forward to the docker host.
   RMI is a difficult protocol to configure :(.    -->

  <extension qualifier="openwhisk">
    <property name="namespace">guest</property>
    <property name="insecure">true</property>
    <property name="auth">23bc46b1-71f6-4ed5-8c54-816aa4f8c502:123zO3xZCLrMN6v2BKK1dXYFpXlPkccOFqm12CdAsMgRU4VrNZ9lyGVCGuMDGIwP</property>
  </extension>
</arquillian>
